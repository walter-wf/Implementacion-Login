<div class="min-h-screen flex flex-col">

  <table class="min-w-full divide-y divide-gray-200 rounded-lg responsive" id="productsTable">
    <thead class="">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Description</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thumbnail
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions
        </th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200" id="productsBody"></tbody>

  </table>

  <div>
    <button id="paginationButton"></button>
  </div>
  <div
    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden transition-opacity duration-500"
    id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="isolate aspect-video w-96 rounded-lg bg-black shadow-gray-500 shadow ring-1 ring-black/5">
        <div class="flex justify-between border-b p-4">
          <h5 class="text-gray-400 text-lg font-bold" id="formModalLabel">Nuevo producto</h5>
          <button type="button" class="text-2xl text-gray-500" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body p-4">
          <form id="newProductForm">
            <div class="mb-4 flex flex-col">
              <label for="title" class="block text-sm font-medium text-gray-400">Título</label>
              <input autocomplete="off" type="text" class="rounded-lg border text-black px-2" id="title" name="title">
            </div>
            <div class="mb-4 flex flex-col">
              <label for="description" class="block text-sm font-medium text-gray-400">Descripción</label>
              <textarea class="form-textarea text-black mt-1 w-full" id="description" name="description"
                rows="3"></textarea>
            </div>
            <div class="mb-4 flex flex-col">
              <label for="price" class="block text-sm font-medium text-gray-400">Precio</label>
              <input autocomplete="off" type="number" class="rounded-lg border text-black px-2" id="price" name="price">
            </div>
            <div class="mb-4 flex flex-col">
              <label for="category" class="block text-sm font-medium text-gray-400">Categoria</label>
              <select id="category" name="category" autocomplete="off" class="rounded-lg border text-black px-2">
                <option value="Desarrollo de automatizaciones">Desarrollo de automatizaciones</option>
                <option value="Desarrollo de WebApps">Desarrollo de WebApps</option>
                <option value="Consultoría de procesos">Consultoría de procesos</option>
              </select>
            </div>
            <div class="mb-4 flex flex-col">
              <label for="thumbnail" class="block text-sm font-medium text-gray-400">URL de la imagen
                (Thumbnail)
              </label>
              <input autocomplete="off" type="text" class="rounded-lg border text-black px-2" id="thumbnail"
                name="thumbnail">
            </div>
            <div class="mb-4 flex flex-col">
              <label for="code" class="block text-sm font-medium text-gray-400">Código</label>
              <input autocomplete="off" type="text" class="rounded-lg border text-black px-2" id="code" name="code">
            </div>

            <div class="modal-footer border-t border-black/50 flex  gap-3 justify-between pt-4">
              <button type="button"
                class="border rounded-lg px-2 duration-500 py-1 hover:scale-105 hover:border-red-800 hover:text-red-800  text-red-600 border-red-600"
                data-bs-dismiss="modal">Cerrar</button>
              <button type="submit"
                class="border rounded-lg px-2 duration-500 py-1 hover:scale-105 hover:border-blue-800 hover:text-blue-800  text-blue-600 border-blue-600">Registrar
                producto</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div>
    </div>
  </div>
  <button type="button" id="openModalButton"
    class=" border rounded-lg shadow shadow-gray-800 fixed bottom-0 right-0 mb-4 mr-4 py-2 px-4 shadow-md">Nuevo
    producto
  </button>

  <script>
    document.getElementById('openModalButton').addEventListener('click', function () {
      document.getElementById('formModal').classList.remove('hidden');
    });

    document.querySelectorAll('[data-bs-dismiss="modal"]').forEach(function (button) {
      button.addEventListener('click', function () {
        document.getElementById('formModal').classList.add('hidden');
      });
    });
  </script>